<!DOCTYPE html>

<html>
  <head>
    <title>Danh sách Sinh Vien</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <style>
      #link {
        margin-bottom: 25px;
        display: block;
      }
    </style>
    <h1>Danh sách lớp</h1>
    <a id="link" href="/form-add"><button>Thêm Sinh Viên</button></a>

    <table border="1">
      <tr>
        <th>ID</th>
        <th>MA SINH VIEN</th>
        <th>NGAY SINH</th>
        <th>GIOI TINH</th>
        <th>QUE QUAN</th>
        <th>ACTION</th>
      </tr>
      <% sinhviens.forEach(item => { %>
      <tr>
        <td><%= item._id %></td>
        <td><%= item.maSinhVien %></td>
        <td><%= item.ngaySinh %></td>
        <td><%= item.gioiTinh %></td>
        <td><%= item.queQuan %></td>
        <td>
          <a href="/form-update/<%= item._id %>">Update</a> ||
          <a href="/form-delete/<%= item._id %>">Delete</a>
        </td>
      </tr>
      <% }) %>
    </table>
  </body>
</html>
